<h1>Exercise Details</h1>
<p>
  <strong>Name:</strong>
  <%= @exercise.name %>
</p>
 
<p>
  <strong>Description:</strong>
  <%= @exercise.description %>
</p>

<h3>Weakness Details</h3>
<% if @exercise.weaknesses.any? %>
	<% @exercise.weaknesses.each do |weakness| %>
		<p>
			<%= weakness.name %>
		</p>
	<% end %>
<% end %>

<%= link_to 'Back', exercises_path %>